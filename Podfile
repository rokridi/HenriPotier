  pod 'Whisper'
  pod 'RxSwift',    '~> 4.0'
  pod 'RxCocoa',    '~> 4.0'

  target 'HenriPotierTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'HenriPotierUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
